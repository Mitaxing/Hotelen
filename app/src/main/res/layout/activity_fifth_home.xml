<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_recommend_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_144"
        android:background="@drawable/main_up_cover" />

    <include
        layout="@layout/layout_main_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_60"
        android:layout_marginLeft="@dimen/w_60"
        android:layout_marginRight="@dimen/w_60"
        android:layout_marginTop="@dimen/h_60" />

    <include
        layout="@layout/layout_main_recommend"
        android:layout_width="@dimen/w_456"
        android:layout_height="@dimen/h_660"
        android:layout_marginLeft="@dimen/w_60"
        android:layout_marginTop="@dimen/h_160" />

    <include
        layout="@layout/layout_main_play"
        android:layout_width="@dimen/w_252"
        android:layout_height="@dimen/h_200"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="@dimen/h_260"
        android:layout_marginRight="@dimen/w_42" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_144"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/h_64">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h_130"
            android:layout_gravity="bottom"
            android:background="#90ffffff" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_rv_enter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_144"
            android:layout_marginLeft="@dimen/w_29" />

    </FrameLayout>

</FrameLayout>