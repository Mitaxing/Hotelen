<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/w_195"
        android:layout_height="@dimen/h_59" />

    <FrameLayout
        android:id="@+id/main_weather_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_30"
            android:text="2017年5月25日"
            android:textColor="@color/white"
            android:textSize="@dimen/h_24" />

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/w_30"
            android:text="暂无天气信息"
            android:textColor="@color/white"
            android:textSize="@dimen/h_24" />
    </FrameLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="-4dp"
        android:layout_toLeftOf="@id/main_weather_item"
        android:layout_marginRight="@dimen/w_30"
        android:text="13 : 14"
        android:textColor="@color/white"
        android:textSize="@dimen/h_55" />
</RelativeLayout>