<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/w_1836"
    android:layout_height="@dimen/h_996">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/w_1836"
        android:layout_height="@dimen/h_996"
        app:cardCornerRadius="@dimen/h_20"
        app:cardElevation="@dimen/w_6"
        app:cardPreventCornerOverlap="false">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/view_info_img"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            app:riv_mutate_background="true"
            android:layout_height="match_parent"
            app:riv_corner_radius="@dimen/h_20" />

        <TextView
            android:id="@+id/view_info_introduce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_240"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_view_info"
            android:lineSpacingExtra="@dimen/h_10"
            android:paddingLeft="@dimen/w_65"
            android:paddingRight="@dimen/w_65"
            android:paddingTop="@dimen/h_55"
            android:textColor="#333333"
            android:textSize="@dimen/h_30" />

    </android.support.v7.widget.CardView>

</FrameLayout>