<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/w_360"
    android:layout_height="@dimen/h_190">

    <android.support.v7.widget.CardView
        android:id="@+id/server_layout"
        android:layout_width="@dimen/w_300"
        android:layout_height="@dimen/h_130"
        android:layout_marginLeft="@dimen/w_30"
        android:layout_marginRight="@dimen/w_30"
        android:layout_marginTop="@dimen/h_30"
        app:cardBackgroundColor="#f4bf2f"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/server_icon"
            android:layout_width="@dimen/w_80"
            android:layout_height="@dimen/w_80"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/w_42" />

        <TextView
            android:id="@+id/server_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/w_135"
            android:gravity="center"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/movie_focus_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/h_15"
        android:layout_marginLeft="@dimen/w_11"
        android:layout_marginRight="@dimen/w_11"
        android:layout_marginTop="@dimen/h_15"
        android:background="@mipmap/moive_focus"
        android:visibility="gone" />

</FrameLayout>