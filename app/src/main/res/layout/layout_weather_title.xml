<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/w_191"
        android:layout_height="@dimen/h_40"
        android:layout_marginLeft="@dimen/w_90"
        android:layout_marginTop="@dimen/h_60"
        android:src="@mipmap/kupa_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/h_60"
        android:layout_marginRight="@dimen/w_100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日小雨 10℃～ 15℃ 深圳  |  " />

        <TextView
            android:id="@+id/main_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:56"
            android:textSize="28sp" />

    </LinearLayout>

</RelativeLayout>