<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w_1570"
    android:layout_height="@dimen/h_222"
    android:layout_marginLeft="@dimen/w_65"
    android:layout_marginTop="@dimen/h_60"
    android:background="@drawable/bg_food_info">

    <View
        android:layout_width="@dimen/w_10"
        android:layout_height="match_parent"
        android:background="#fcc100" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_35"
            android:layout_marginTop="@dimen/h_28"
            android:text="和依赖餐厅"
            android:textColor="#333333"
            android:textSize="@dimen/h_32" />

        <TextView
            android:id="@+id/restaurant_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_35"
            android:layout_marginTop="@dimen/h_28"
            android:text="3.1分"
            android:textColor="#fcc100"
            android:textSize="@dimen/h_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_35"
            android:layout_marginTop="@dimen/h_88"
            android:text="地址："
            android:textColor="#333333"
            android:textSize="@dimen/h_26" />

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_88"
            android:text="北山道54号"
            android:textColor="#333333"
            android:textSize="@dimen/h_26" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_35"
            android:layout_marginTop="@dimen/h_128"
            android:text="电话："
            android:textColor="#333333"
            android:textSize="@dimen/h_26" />

        <TextView
            android:id="@+id/restaurant_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_128"
            android:text="25278588"
            android:textColor="#333333"
            android:textSize="@dimen/h_26" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_35"
            android:layout_marginTop="@dimen/h_168"
            android:text="营业时间："
            android:textColor="#333333"
            android:textSize="@dimen/h_26" />

        <TextView
            android:id="@+id/restaurant_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_168"
            android:text="08:30 - 21:00"
            android:textColor="#333333"
            android:textSize="@dimen/h_26" />
    </LinearLayout>
</FrameLayout>