<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/w_560"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/w_30"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_view_focus"
        android:layout_width="@dimen/w_560"
        android:layout_height="@dimen/h_650"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/h_50"
        android:visibility="gone"
        android:src="@mipmap/focus_view" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_view"
        android:layout_width="@dimen/w_500"
        android:layout_height="@dimen/h_600"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/h_102"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="@dimen/h_10">

        <ImageView
            android:id="@+id/view_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textColor="#666666"
        android:textSize="@dimen/h_32" />

</FrameLayout>